{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "src/app.ts",
    "src/server.ts",
    "src/config/**/*",
    "src/routes/auth.ts",
    "src/routes/password-reset.ts",
    "src/routes/passenger-auth.ts",
    "src/routes/rides.ts",
    "src/routes/geo.ts",
    "src/middleware/**/*",
    "src/middlewares/error.ts",
    "src/modules/auth/**/*",
    "src/modules/rides/**/*",
    "src/modules/geo/**/*"
  ],
  "exclude": [
    "src/services/**",
    "src/modules/admin/**",
    "src/modules/governance/**",
    "src/modules/premium-tourism/**",
    "src/scripts/**",
    "src/**/__tests__/**"
  ]
}
