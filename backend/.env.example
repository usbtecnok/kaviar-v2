# Environment
NODE_ENV=development
PORT=3001

# Database - Neon PostgreSQL (recommended)
# Direct connection (best for migrations/DDL)
DATABASE_URL="postgresql://USER:PASSWORD@ep-xxxx.us-east-1.aws.neon.tech/neondb?sslmode=require"

# Optional: Pooler connection (best for runtime connections)
# DATABASE_URL_POOLER="postgresql://USER:PASSWORD@ep-xxxx-pooler.c-2.us-east-1.aws.neon.tech/neondb?sslmode=require"

# Alternative: Supabase PostgreSQL (optional)
# DATABASE_URL="postgresql://postgres:PASSWORD@db.PROJECT_ID.supabase.co:5432/postgres"
# SUPABASE_URL="https://PROJECT_ID.supabase.co"
# SUPABASE_ANON_KEY="your-anon-key"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Admin
ADMIN_DEFAULT_EMAIL=admin@kaviar.com
ADMIN_DEFAULT_PASSWORD=admin123

# Rate Limiting
ADMIN_LOGIN_RATE_LIMIT=10
ADMIN_LOGIN_RATE_LIMIT_PER_EMAIL=5

# Driver Governance (Feature Flags)
ENABLE_DRIVER_APPROVAL_GATES=false

# Geofence (Feature Flags)
ENABLE_GEOFENCE=false
FALLBACK_WAIT_SECONDS=0
GEOFENCE_LOCATION_VALIDITY=5

# Driver Enforcement (Feature Flags)
ENABLE_DRIVER_ENFORCEMENT_GATES=false

# Diamond System (Feature Flags)
ENABLE_DIAMOND=false
DIAMOND_BONUS_FIXED=5.00
DIAMOND_BONUS_DAILY_CAP=25.00

# Rating System (Feature Flags)
ENABLE_RATING_SYSTEM=false
RATING_WINDOW_DAYS=7
RATING_COMMENT_MAX_LENGTH=200

# Premium Tourism (Feature Flags)
ENABLE_PREMIUM_TOURISM=false
MIN_RATING_PREMIUM=4.7
MIN_RATINGS_COUNT_PREMIUM=20

# Integrations (Feature Flags)
ENABLE_TWILIO_WHATSAPP=true

# Legacy APIs (Feature Flags)
ENABLE_LEGACY=false
